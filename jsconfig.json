{
  "compilerOptions": {
    "baseUrl": ".",
    "checkJs": false,
    "lib": ["dom", "es2020"],
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "target": "ES2020",
    "types": ["vitest/globals"]
  },
  "vueCompilerOptions": {
    "target": "auto"
  },
  "include": ["src/**/*", "tests/**/*"]
}
